<core:FragmentDefinition controllerName="com.inbc.scp-fundamentos.controller.Master"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:t="sap.ui.table">
	<t:Table id="tblUsuario"
			 rows="{/MUsersSet}"
			 columnHeaderHeight="50"
			 visibleRowCount="5">
		<t:rowSettingsTemplate>
    		<t:RowSettings highlight="{= ${Stat2} === '1' ? 'Information' : 'Error'}"/>
		</t:rowSettingsTemplate>
		<t:columns>
			<t:Column label="Estado">
				<t:template>
					<Text text="{Name}" />
				</t:template>
			</t:Column>
			<t:Column label="Estado">
				<t:template>
					<ObjectStatus text="{= ${Stat2} === '1' ? 'Activo' : 'Inactivo'}"
								  icon="{= ${Stat2} === '1' ? 'sap-icon://status-positive' :'sap-icon://status-negative'}"
								  state="{= ${Stat2} === '1' ? 'Information' : 'Error'}"/>
				</t:template>
			</t:Column>
		</t:columns>
	</t:Table>
</core:FragmentDefinition>